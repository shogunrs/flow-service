    const confidenceMessage = result.confidence ? ` (${Math.round(result.confidence)}% confian√ßa)` : ''

    toastSuccess(`${documentTypeMessage}${extractedFields.length} campo(s) extra√≠do(s): ${extractedFields.join(', ')}${confidenceMessage}`)

    console.log('‚úÖ OCR conclu√≠do com sucesso:', {
